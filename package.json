{
  "name": "userscripts",
  "version": "1.0.0",
  "description": "Collection of userscripts for various websites",
  "type": "module",
  "author": "jaredcat",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "prepare": "husky",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "dev:script": "vite --mode",
    "build": "tsc && node scripts/build-all.cjs",
    "build:script": "vite build --mode",
    "build:all": "vite build --config vite.config.ts"
  },
  "dependencies": {
    "@violentmonkey/dom": "^2.2.1",
    "@violentmonkey/ui": "^0.7.9"
  },
  "devDependencies": {
    "@types/jquery": "^4.0.0",
    "@types/node": "^25.3.0",
    "@violentmonkey/types": "^0.3.2",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vite": "^7.3.1",
    "vite-plugin-monkey": "^7.1.9"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.12.0"
}
